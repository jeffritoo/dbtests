<%- include("_header") -%>

<h1>Update a record</h1>

<form action="/edit/<%= model.cusid %>" method="post">
  <div class="form-horizontal">

            <!-- ID -->
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="cusid">ID</label>
          <div class="col-sm-2">
            <input readonly class="form-control" name="cusid" value="<%= model.cusid %>"/>
          </div>
        </div>
        <!-- FIRST NAME  -->
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="cusfname">First Name</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="cusfname" value="<%= model.cusfname %>"/>
            <td>(Required)</td>
          </div>
        </div>
        <!-- LAST NAME   -->
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="cuslname">Last Name</label>
          <div class="col-sm-4">
            <input  type="text" class="form-control" name="cuslname" value="<%= model.cuslname %>"/>
            <td>(Required)</td>
          </div>
        </div>
        <!-- STATE -->
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="cusstate">State</label>
          <div class="col-sm-2">
            <input type="text" maxlength="2" class="form-control" name="cusstate" value="<%= model.cusstate %>" />
          </div>
        </div>
        <!-- SALES YTD -->
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="cussalesytd">Sale YTD</label>
          <div class="col-sm-4">
            <input  class="form-control" name="cussalesytd" value="<%= model.cussalesytd %>"/>
          </div>
        </div>
        <!-- PREVIOUS YEARS SALES -->
        <div class="form-group row">
          <label class="col-form-label col-sm-2" for="cussalesprev">Previous Years Sales</label>
          <div class="col-sm-4">
            <input  class="form-control" name="cussalesprev" value="<%= model.cussalesprev %>"/>
          </div>
        </div>
    

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/customer">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>

